<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddAlarmActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="AM  6 : 00"
        android:textSize="40dp"
        android:gravity="center"/>

    <LinearLayout
        android:background="#F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="15dp"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내일 - 4월 27일(수)"
                android:textSize="20dp"/>

            <Button
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text="▦"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_mon"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="월"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#00000000"/>

            <Button
                android:id="@+id/btn_tue"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="화"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#00000000"/>

            <Button
                android:id="@+id/btn_wed"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="수"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#00000000"/>

            <Button
                android:id="@+id/btn_thu"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="목"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#00000000"/>

            <Button
                android:id="@+id/btn_fri"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="금"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#00000000"/>

            <Button
                android:id="@+id/btn_sat"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="토"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#00000000"/>

            <Button
                android:id="@+id/btn_sun"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="일"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#00000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_create"
                android:text="CREATE"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>