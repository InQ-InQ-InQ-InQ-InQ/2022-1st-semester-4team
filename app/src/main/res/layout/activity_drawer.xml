<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:id="@+id/drawerView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/background_light">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lout_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:background="#00FFFFFF"
            android:layout_gravity="right"
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/lout_option"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lout_profile"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/border_bottom_gray_thin">
        <ImageView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"/>
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="이상현"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="njsharry@naver.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingBottom="5dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/lout_profile"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_online_offline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="offline"
        android:paddingLeft="15dp"
        android:background="@drawable/border_bottom_gray_thin"/>

    <TextView
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingBottom="5dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_online_offline"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최근 기록"
        android:paddingLeft="15dp"
        android:background="@drawable/border_bottom_gray_thin"/>


</androidx.constraintlayout.widget.ConstraintLayout>