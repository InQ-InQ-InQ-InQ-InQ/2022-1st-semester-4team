<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <ImageView

        android:src="@drawable/logo_tointerval_black_runningman"
        android:id="@+id/iv_login_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lout_id_password"
        app:layout_constraintWidth_percent="0.75"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/lout_id_password"
        app:layout_constraintTop_toBottomOf="@id/iv_login_image"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:orientation="vertical">

        <EditText
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:background="@drawable/edittext_gray"
            android:layout_margin="10dp"
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:minHeight="48dp"
            android:textColorHint="#6E6E6E"/>

        <EditText
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:background="@drawable/edittext_gray"
            android:layout_margin="10dp"
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:minHeight="48dp"
            android:textColorHint="#6E6E6E"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout_remember_forget"
        app:layout_constraintTop_toBottomOf="@id/lout_id_password"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <Button
            android:id="@+id/btn_rememberId"
            android:background="#00000000"
            android:textColor="#373737"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="15dp"
            android:text="아이디 저장"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout_signIn_signUp"
        app:layout_constraintTop_toBottomOf="@id/lout_remember_forget"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <Button
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_black"
            android:layout_margin="10dp"
            android:id="@+id/btn_signIn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="LOGIN"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout_signIn_forgetId_forgetPassword"
        app:layout_constraintTop_toBottomOf="@id/lout_signIn_signUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <Button
            android:id="@+id/btn_signUp"
            android:background="#00000000"
            android:textColor="#373737"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="회원가입"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_forgetId"
            android:background="#00000000"
            android:textColor="#373737"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="아이디 찾기"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_forgetPassword"
            android:background="#00000000"
            android:textColor="#373737"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="비밀번호 찾기"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>