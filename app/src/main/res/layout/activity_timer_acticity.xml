<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimerActivity">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lout_add_option"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="#000000"
            android:background="#00FFFFFF"
            android:id="@+id/btn_addAlarm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:text="+"/>

        <Button
            android:textColor="#000000"
            android:background="#00FFFFFF"
            android:id="@+id/btn_alarmOption"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:text=":"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_timer_viewer"
        app:layout_constraintTop_toBottomOf="@+id/lout_add_option"
        app:layout_constraintBottom_toTopOf="@id/lout_start"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="00:00:00"
        android:textSize="40dp"/>


    <LinearLayout
        android:id="@+id/lout_start"
        app:layout_constraintBottom_toTopOf="@+id/lout_menuBar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="START"/>

    </LinearLayout>


    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lout_menuBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#00FFFFFF"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/btn_alarm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Alarm"/>

        <Button
            android:background="#00FFFFFF"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/btn_stopWatch"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Watch"/>

        <Button
            android:background="#00FFFFFF"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/btn_timer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Timer"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>