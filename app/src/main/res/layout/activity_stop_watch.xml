<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StopWatchActivity">

    <LinearLayout
        android:id="@+id/lout_option"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="#000000"
            android:background="#00FFFFFF"
            android:id="@+id/btn_alarmOption"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:text=":"/>

    </LinearLayout>




    <TextView
        app:layout_constraintTop_toBottomOf="@id/lout_option"
        app:layout_constraintBottom_toTopOf="@id/lout_record_viewer_top"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_stopwatch_viewer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="00:00:00"
        android:textSize="56dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:background="@drawable/border_bottom_black_thin"
        android:layout_marginRight="52dp"
        android:layout_marginLeft="52dp"
        android:paddingBottom="10dp"
        android:textSize="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_stopwatch_viewer"
        app:layout_constraintBottom_toTopOf="@id/lout_record_viewer_bottom"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lout_record_viewer_top"
        app:layout_constraintHeight_percent="0.05"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:id="@+id/lout_interval_top"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="구간"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:id="@+id/lout_split_record_top"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="구간 기록"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:id="@+id/lout_course_record_top"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="전체 시간"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#00FFFFFF"
        android:layout_marginRight="52dp"
        android:layout_marginLeft="52dp"
        android:textSize="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_stopwatch_viewer"
        app:layout_constraintBottom_toTopOf="@id/lout_record_start"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lout_record_viewer_bottom"
        app:layout_constraintHeight_percent="0.45"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:id="@+id/lout_interval"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:id="@+id/lout_split_record"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:id="@+id/lout_course_record"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/lout_record_start"
        app:layout_constraintBottom_toTopOf="@+id/lout_menuBar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_record_init"
            android:textSize="20dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_gray"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="RECORD"/>

        <Button
            android:id="@+id/btn_start_pause_resume"
            android:textSize="20dp"
            android:layout_marginRight="52dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_blue"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="START"/>
    </LinearLayout>


    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lout_menuBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#00FFFFFF"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/btn_alarm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Alarm"/>

        <Button
            android:background="#00FFFFFF"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/btn_stopWatch"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Watch"/>

        <Button
            android:background="#00FFFFFF"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/btn_timer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Timer"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>