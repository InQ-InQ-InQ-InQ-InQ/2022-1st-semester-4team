<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmActivity">

    <TextView
        android:id="@+id/tv_next_alarm_viewer"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:gravity="center"
        android:text="n시간 n분 뒤에 알람이 울립니다"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lout_addAlarm_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_next_alarm_viewer">

        <Button
            android:id="@+id/btn_addAlarm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:text="+"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_alarmOption"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:text=":"
            android:textColor="#000000"
            android:textSize="30dp" />

    </LinearLayout>

    <ScrollView
        android:background="#0000FF"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lout_addAlarm_option"
        app:layout_constraintBottom_toTopOf="@+id/lout_menuBar"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:background="#00FF00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:background="#FF0000"
                android:id="@+id/lv_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/lout_menuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btn_alarm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:text="Alarm"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_stopWatch"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:text="Watch"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_timer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:text="Timer"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>